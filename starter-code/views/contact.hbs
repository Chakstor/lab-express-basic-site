<div class="contact-page">
    <div class="section-header">
        <h2 class="section-header__title">Contact</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-7">
                <form>
                    <div class="form-group mb-3">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="name" id="name">
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email">
                    </div>
                    <div class="form-group mb-3">
                        <label for="text">Phone Number</label>
                        <input type="tel" class="form-control" name="phone_number" id="phone_number">
                    </div>
                    <div class="form-group mb-3">
                        <label for="message">Message</label>
                        <textarea class="form-control" name="message" id="message" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-5 align-self-center">
                <div class="text-center">
                    <img src="public/images/contact-logo.png" class="img-fluid mb-4" width="250" alt="">
                    <address>
                        <strong>Surf School, Inc.</strong><br>
                        1273 Market St, Suite 2<br>
                        San Francisco, CA 94103<br>
                        <a href="tel:+1234567890">(123) 456-7890</a>
                    </address>
                    <address>
                        <strong>Contact us</strong><br>
                        <a href="mailto:surg.school@example.com">surf.school@example.com</a>
                    </address>
                </div>
            </div>
        </div>
    </div>
</div>