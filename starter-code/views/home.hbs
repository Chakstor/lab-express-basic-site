{{!-- MAIN HERO --}}
<div class="main-hero d-flex align-content-center text-center flex-wrap">
    <h2 class="main-hero__title">Ride every wave as if it's your last</h2>
    <p class="main-hero__subtitle">We love the motion of the ocean</p>
</div>

{{!-- MAIN CAROUSEL --}}
<section class="container main-carousel-section">
    <div class="main-carousel">
        <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {{#each carousel}}
                <div class="carousel-item {{#if @first}} active {{/if}}">
                    <img src="{{this.image}}" class="d-block w-100" alt="">
                </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>

